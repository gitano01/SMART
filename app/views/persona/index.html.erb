
<div>
    <%= link_to 'Nuevo', new_persona_path, class: 'btn btn-sm btn-primary' %>
</div>

<%if @personas.size > 0 %>
    <table>
        <thead>
            <td>Id</td>
            <td>Nombre</td>
            <td>Apellido</td>
            <td>Edad</td>
        </thead>
        <tbody>
          <% @personas.each do |p|%>  
            <tr>
                <td><%= p.id %></td>
                <td><%= p.nombre %></td>
                <td><%= p.apellido %></td>
                <td><%= p.edad %></td>
            </tr>
          <%end%>      
        </tbody>
    </table>
<%else%>
<div>No hay registros morro</div>
<%end%>